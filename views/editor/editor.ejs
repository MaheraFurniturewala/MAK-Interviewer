</header>
<main>
  <div class="editor" id="editor"></div>
  <div class="outputWrap"><span>Output:</span>
    <div class="output" id="output">
    </div>
  </div>
</main>
<section class="control-panel">
  <div class=" button-run-container">
    <button class="btn" onclick="executeCode()">Run</button>
  </div>
  <div class="language-selection">Select Language:
    <select class="languages" id="languages" onchange="changeLanguage()">
      <option value="cpp">C++</option>
      <option value="c">C</option>
      <option value="py">Python</option>
      <option value="java">Java</option>
      <option value="rb">Ruby</option>
      <option value="kt">Kotlin</option>
      <option value="swift">Swift</option>
    </select>
  </div>
  <div class="settings">
    <a href="#"><i class="fa fa-cog fa-2x" style="color: white;" aria-hidden="true"></i></a>
  </div>
  <div id="main">
    <button class="openbtn" onclick="openNav()">☰ ChatBox</button>
  </div>

  </div>
</section>

<div id="mySidebar" class="sidebar">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
  <p></p>
  <div class="content">
    <div class="body" id="chat-body">
      <ul id="messages" class="chat__messages"></ul>
    </div>
    <div class="chat__footer">
      <form id="message-form" method="POST" action="/chat/newMessage">
        <input name="message" type="text"  autofocus autocomplete="off" />
        <input type=submit id="submit-btn">Send</input>
      </form>
    </div>
  </div>
</div>


